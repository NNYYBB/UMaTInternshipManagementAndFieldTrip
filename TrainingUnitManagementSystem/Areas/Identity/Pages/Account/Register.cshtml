@page
@model TrainingUnitManagementSystem.Areas.Identity.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "log in";
}

<h1>@ViewData["Title"]</h1>


    <div class="registration-container">
        <h2 class="text-center mb-4">Registration Form</h2>
        <form>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" placeholder="Enter first name" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" placeholder="Enter last name" required>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter phone number" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password" required>
            </div>
            <div class="form-group">
                <label>Gender</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="genderMale" value="male" required>
                    <label class="form-check-label" for="genderMale">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="female" required>
                    <label class="form-check-label" for="genderFemale">
                        Female
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gender" id="genderOther" value="other" required>
                    <label class="form-check-label" for="genderOther">
                        Other
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label for="dob">Date of Birth</label>
                <input type="date" class="form-control" id="dob" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" placeholder="Enter address/Location" required>
            </div>
        <div class="form-group">
            <label for="Year">Year</label>
            <select class="form-control" id="year" required>
                <option value="year1">Year One</option>
                <option value="year1">Year Two</option>
                <option value="year1">Year Three</option>
                <option value="year1">Year Four</option>
            </select>
        </div>
            <div class="form-group">
                <label for="Faculty">Faculty</label>
                <select class="form-control" id="Faculty" required>
                    <option value="">Select your Faculty</option>
                    <option value="Fmmt">Faculty of Mining and Minerals Technology</option>
                    <option value="Fcms">Faculty of Computing and Mathematical Sciences</option>
                    <option value="Fims">Faculty of Integrated Management Science</option>
                    <option value="Foe">Faculty of Engineering</option>
                    <option value="FGES">Faculty of Geosciences and Enviromental studies</option>
                    <option value="Spes">School of Petroleum Studies</option>
                    <option value="SPS">School of Postgraduate Studies</option>
                </select>
            </div>
        <div class="form-group">
            <label for="department">Department</label>
            <select class="form-control" id="department" required>
                <option value="">Select your department</option>
                <option value="MN">Department of Mining Engineering</option>
                <option value="ME">Department of Minerals Engineering</option>
                <option value="CE">Department of Computer Science Engineering</option>
                <option value="MA">Department of Mathematical Science</option>
                <option value="TC">Department of Technical Communication</option>
                <option value="MS">Department of Management Studies</option>
                <option value="MC">Department of Mechanical Engineering</option>
                <option value="EL">Electrical and Electronics Engeering</option>
                <option value="RN">Renewable Energy Engineering</option>
                <option value="GE">Department of Geological engineering</option>
                <option value="GM">Department of Geomatics Engineering</option>
                <option value="ES">Department of Enviromental science and Engineering</option>
                <option value="NG">Department of Petroleum Engineering Natural Gas Engineering</option>
                <option value="PG">Department of Petroleum Geosciences Engineering</option>
                <option value="PC">Department of Chemical and Petrochemical Engineering</option>
            </select>
        </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="terms" required>
                    <label class="form-check-label" for="terms">
                        I agree to the terms and conditions
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </form>
    </div>



